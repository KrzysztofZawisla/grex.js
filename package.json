{
  "name": "grex.js",
  "version": "3.0.1",
  "main": "lib/wasm/browser/index.js",
  "module": "lib/wasm/browser/index-module.js",
  "types": "lib/wasm/browser/index.d.ts",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/KrzysztofZawisla/grex.js.git"
  },
  "author": "Krzysztof Zawis≈Ça <zawislakrzysztof.zk@gmail.com>",
  "license": "MIT",
  "scripts": {
    "install": "node-pre-gyp install || yarn run build-and-package-addon",
    "pre-build-wasm": "cd src/wasm/native && cargo build --release --target wasm32-unknown-unknown",
    "build-wasm-node": "cd src/wasm/native && wasm-bindgen --target nodejs --out-dir src/wasm/native/pkg-node --out-name index target/wasm32-unknown-unknown/release/native.wasm --no-typescript",
    "package": "node-pre-gyp package",
    "upload-binary": "node-pre-gyp-github publish",
    "build-and-publish": "yarn run build && yarn run upload-binary && yarn publish",
    "test": "yarn run build-addon && jest",
    "lint": "eslint --fix -f unix \"src/**/*.ts\" && prettier --write \"src/**/*.ts\"",
    "clean-yarn-cache": "yarn cache clean",
    "remove-build": "rimraf lib",
    "build-addon": "cd src/native && neon build --release",
    "build-and-package-addon": "yarn run build-addon && yarn run move-native-file && yarn package",
    "build": "yarn run build-addon && yarn run remove-build && tsc && cross-env TS_NODE_PROJECT=tsconfig.webpack.json webpack --config webpack.config.ts && rimraf lib/native/index.node && yarn run move-native-file && yarn run package",
    "build-dev": "yarn run build-addon-dev && yarn run remove-build && tsc && cross-env TS_NODE_PROJECT=tsconfig.webpack.json webpack --config webpack.config.ts --mode development && rimraf lib/native/index.node && yarn run move-native-file && yarn run package",
    "check": "ncu",
    "update": "ncu -u && yarn",
    "npm-check": "npm-check",
    "audit-ci": "audit-ci",
    "move-native-file": "cross-env TS_NODE_PROJECT=tsconfig.webpack.json ts-node tools/move-native-file.ts"
  },
  "files": [
    "lib"
  ],
  "binary": {
    "module_name": "index",
    "host": "https://github.com/KrzysztofZawisla/grex.js/releases/download/",
    "remote_path": "native-{version}",
    "package_name": "{node_abi}-{platform}-{arch}.tar.gz",
    "module_path": "./lib/native/native",
    "pkg_path": "."
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn run lint"
    }
  },
  "devDependencies": {
    "@babel/core": "^7.13.13",
    "@babel/plugin-syntax-top-level-await": "^7.12.13",
    "@babel/preset-env": "^7.13.12",
    "@babel/preset-typescript": "^7.13.0",
    "@microsoft/tsdoc": "^0.13.0",
    "@types/case-sensitive-paths-webpack-plugin": "^2.1.5",
    "@types/jest": "^26.0.22",
    "@types/node": "^14.14.36",
    "@types/prompt-sync": "^4.1.0",
    "@types/terser-webpack-plugin": "^5.0.3",
    "@types/webpack-bundle-analyzer": "^3.9.2",
    "@types/webpack-node-externals": "^2.5.1",
    "@typescript-eslint/eslint-plugin": "^4.19.0",
    "@typescript-eslint/parser": "^4.19.0",
    "@wasm-tool/wasm-pack-plugin": "^1.3.3",
    "audit-ci": "^3.1.1",
    "babel-jest": "^26.6.3",
    "babel-loader": "^8.2.2",
    "babel-plugin-const-enum": "^1.0.1",
    "case-sensitive-paths-webpack-plugin": "^2.4.0",
    "clean-webpack-plugin": "^3.0.0",
    "core-js": "^3.9.1",
    "cross-env": "^7.0.3",
    "depcheck": "^1.4.0",
    "duplicate-package-checker-webpack-plugin": "^3.0.0",
    "eslint": "^7.23.0",
    "eslint-config-prettier": "^8.1.0",
    "eslint-plugin-jest": "^24.3.2",
    "eslint-plugin-jsdoc": "^32.3.0",
    "eslint-plugin-prettier": "^3.3.1",
    "eslint-plugin-sonarjs": "^0.6.0",
    "eslint-plugin-tsdoc": "^0.2.11",
    "eslint-plugin-unicorn": "^29.0.0",
    "eslint-webpack-plugin": "^2.5.3",
    "husky": "^5.2.0",
    "jest": "^26.6.3",
    "jest-extended": "^0.11.5",
    "jsdoc": "^3.6.6",
    "neon-cli": "^0.8.0",
    "node-loader": "^1.0.2",
    "node-pre-gyp-github": "^1.4.3",
    "npm-check": "^5.9.2",
    "npm-check-updates": "^11.3.0",
    "prettier": "^2.2.1",
    "prompt-sync": "^4.2.0",
    "rimraf": "^3.0.2",
    "source-map-loader": "^2.0.1",
    "terser-webpack-plugin": "^5.1.1",
    "ts-jest": "^26.5.4",
    "ts-node": "^9.1.1",
    "tsd": "^0.14.0",
    "typescript": "^4.2.3",
    "webpack": "^5.28.0",
    "webpack-bundle-analyzer": "^4.4.0",
    "webpack-cli": "^4.5.0",
    "webpack-node-externals": "^2.5.2",
    "yarn": "^1.22.10"
  },
  "dependencies": {
    "node-pre-gyp": "^0.17.0"
  }
}
