{
  "compilerOptions": {
    "target": "esnext",
    "lib": ["esnext", "dom"],
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "strict": true,
    "alwaysStrict": true,
    "module": "esnext",
    "declaration": true,
    "emitDeclarationOnly": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "strictNullChecks": true,
    "noImplicitAny": true,
    "downlevelIteration": true,
    "pretty": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "skipLibCheck": true,
    "outDir": "lib"
  },
  "include": [
    "src"
  ],
  "exclude": ["src/**/*.test.ts"]
}